@model IEnumerable<WebBanHang.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<h2>Danh sách sản phẩm</h2>
<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Mô tả</th>
            <th>Giá</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("N0") VNĐ</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>
