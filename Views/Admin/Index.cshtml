            <a href="/" class="btn btn-outline-success mt-2 me-2">Về trang chủ</a>
            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger mt-2">Đăng xuất</button>
            </form>
        </div>
    </div>
</div> 