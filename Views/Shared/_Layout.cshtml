<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanHang</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebBanHang.styles.css" asp-append-version="true" />
    <style>
        .auth-buttons {
            display: flex;
            align-items: center;
            gap: 16px;
        }
        .btn-auth {
            padding: 10px 24px;
            font-size: 15px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.2s ease;
            min-width: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 42px;
        }
        .btn-register {
            background-color: #4CAF50;
            border: none;
            color: white;
        }
        .btn-register:hover {
            background-color: #43A047;
            color: white;
            transform: translateY(-1px);
        }
        .btn-login {
            background-color: white;
            border: 2px solid #4CAF50;
            color: #4CAF50;
        }
        .btn-login:hover {
            background-color: #F1F8E9;
            border-color: #43A047;
            color: #43A047;
            transform: translateY(-1px);
        }
        .btn-logout {
            background-color: #f44336;
            border: none;
            color: white;
            padding: 8px 20px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
        }
        .btn-logout:hover {
            background-color: #e53935;
            color: white;
        }
        .user-name {
            font-weight: 600;
            color: #2E7D32;
            font-size: 15px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebBanHang</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetInt32("UserId") == null)
                        {
                            <div class="auth-buttons">
                                <a class="btn btn-auth btn-register" asp-controller="Account" asp-action="Register">Đăng ký</a>
                                <a class="btn btn-auth btn-login" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </div>
                        }
                        else
                        {
                            <div class="auth-buttons">
                                <span class="user-name">@Context.Session.GetString("UserName")</span>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-logout">Đăng xuất</button>
                                </form>
                            </div>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebBanHang - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
